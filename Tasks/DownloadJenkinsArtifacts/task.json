{
  "id": "3A2D6637-EDEC-4873-B17A-2F63308D64BC",
  "name": "DownloadJenkinsArtifacts",
  "friendlyName": "Download Artifacts - Jenkins",
  "description": "Download artifacts from jenkins job",
  "helpMarkDown": "",
  "category": "Utility",
  "author": "ms-vscs-rm",
  "version": {
    "Major": 0,
    "Minor": 1,
    "Patch": 0
  },
  "demands": [],
  "minimumAgentVersion": "2.0.0",
  "inputs": [
    {
      "name": "connection",
      "type": "connectedService:jenkins",
      "label": "Jenkins Connection",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Jenkins connection"
    },
    {
      "name": "definition",
      "type": "pickList",
      "label": "Jenkins Job",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Select the jenkins job"
    },
    {
      "name": "version",
      "type": "pickList",
      "label": "Build",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Build Id"
    },
    {
      "name": "downloadPattern",
      "type": "string",
      "label": "Download Filter",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Minmatch pattern to filter files to be downloaded."
    },
    {
      "name": "downloadPath",
      "type": "string",
      "label": "Destination directory",
      "defaultValue": "$(System.ArtifactsDirectory)",
      "required": true,
      "helpMarkDown": "Path on the agent machine where the artifact will be downloaded"
    }
  ],
  "dataSourceBindings": [
    {
      "endpointId": "$(connection)",
      "target": "definition",
      "dataSourceName": "Jobs",
      "resultTemplate": "{ \"Value\" : \"{{name}}\", \"DisplayValue\" : \"{{{displayName}}}\" }"
    },
    {
      "endpointId": "$(connection)",
      "target": "version",
      "dataSourceName": "Builds",
      "parameters": {
          "definition": "$(definition)"
      },
      "resultTemplate": "{ \"Value\" : \"{{id}}\", \"DisplayValue\" : \"{{{displayName}}}\" }"
    }
  ],
  "instanceNameFormat": "Download Artifacts - Jenkins",
  "execution": {
    "Node": {
      "target": "download.js",
      "argumentFormat": ""
    }
  },
  "messages": {
    "DownloadArtifacts": "Downloading artifacts from : %s"
  }
}
